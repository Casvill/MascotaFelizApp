@page
@model MascotaFeliz.App.Frontend.Pages.ListaVeterinariosModel
@{
    <h1 class="text-center mt-5">Listado de Veterinarios</h1>
    <hr>
    <table class="table table-striped table-bordered table-sm bg-light mt-3">
        <tr class="text-center">
          
            <th >Nombre</th>
            <th >Apellido</th>
            <th >Direcci√≥n</th>
            <th >Telefono</th>
            <th >Tarjeta Profesional</th>
            <th >Detalle Veterinario</th>
            <th >Editar Veterinario</th>
            
        </tr>
        @foreach (var veterinario in Model.listaVeterinarios)
        {
             <tr class="text-center">
               
                <td>@veterinario.Nombres</td>
                <td>@veterinario.Apellidos</td>
                <td>@veterinario.Direccion</td>
                <td>@veterinario.Telefono</td>
                <td>@veterinario.TarjetaProfesional</td>
                



                <td>
                    <a class="btn btn-primary table-btn" asp-page="./DetallesVeterinarios" asp-route-veterinarioId="@veterinario.Id">
                        <i class="fa-regular fa-address-card"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary table-btn" asp-page="./EditarVeterinarios" asp-route-veterinarioId="@veterinario.Id">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
    <a class="btn btn-primary table-btn" asp-page="./EditarVeterinarios" class="btn-default">Agregar Veterinario <i class="fa-solid fa-user-plus"></i></a>
}
